{
	"name": "pozitronik/yii2-exceptionslogger",
	"description": "Exception logger for YII2",
	"type": "yii2-extension",
	"keywords": [
		"yii2",
		"activerecord",
		"logger",
		"exceptions"
	],
	"license": "GPL-3.0-or-later",
	"authors": [
		{
			"name": "Pavel Dubrovsky",
			"email": "antikillerxxl@gmail.com"
		}
	],
	"minimum-stability": "dev",
	"require": {
		"php": ">=8.0",
		"pozitronik/yii2-traits": "^1.0.5",
		"pozitronik/yii2-helpers": "^1.0.9",
		"kartik-v/yii2-grid": "^3.5.0",
		"kartik-v/yii2-date-range": "^1.7.0"
	},
	"require-dev": {
		"yiisoft/yii2": "dev-master",
		"yiisoft/yii2-bootstrap4": "~2.0.10"
	},
	"suggest": {
		"kartik-v/yii2-bootstrap4-dropdown": "Needed for dropdowns in default views"
	},
	"autoload": {
		"psr-4": {
			"pozitronik\\sys_exceptions\\": "src"
		}
	},
	"config": {
		"process-timeout": 1800,
		"fxp-asset": {
			"enabled": false
		},
		"allow-plugins": {
			"yiisoft/yii2-composer": true
		}
	},
	"repositories": [
		{
			"type": "composer",
			"url": "https://asset-packagist.org"
		}
	]
}
